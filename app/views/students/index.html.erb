<%= render partial: 'shared/page_info', locals: {page_title: "Student List", page_header: "Student List", page_header_description: "Registered Students"} %>

<div class="row">
  <div class="col-xs-12">
    <div class="box">
      <div class="box-header">
        <h3 class="box-title"></h3>
        <div class="box-tools">
          <%= form_tag({controller: "students", action: "search"}, method: 'get') do %>
            <div class="input-group" style="width: 150px;">
            <%= number_field_tag :regno, nil, { class: "form-control input-sm pull-right",placeholder: "reg no"}  %>
            <div class="input-group-btn">
              <%= submit_tag "Search", {class: "btn btn-sm btn-default"} %>
            </div>
          </div>
        <% end %>
        </div>
      </div><!-- /.box-header -->
      <div id = "student_list_wrapper" class="box-body table-responsive no-padding">
        <%=  render 'index' %>
      </div><!-- /.box-body -->
    </div><!-- /.box -->
  </div>

</div>
