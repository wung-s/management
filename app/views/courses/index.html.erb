<%= render partial: 'shared/page_info', locals: {page_title: "Course List", page_header: "Course List", page_header_description: "Courses"} %>

<div class="row">
  <div class="col-xs-12">
    <div class="box">
      <div class="box-header">
        <h3 class="box-title"></h3>
        <%=link_to "Add Course", new_course_path, remote: true, class: "btn btn-success" %>
        <div class="box-tools">
          <%= form_tag({controller: "courses", action: "search"}, method: 'get') do %>
            <div class="input-group" style="width: 150px;">
            <%= number_field_tag :code, nil, { class: "form-control input-sm pull-right",placeholder: "code"}  %>
            <div class="input-group-btn">
              <%= submit_tag "Search", {class: "btn btn-sm btn-default"} %>
            </div>
          </div>
        <% end %>
        </div>
      </div><!-- /.box-header -->
      <div id = "course_list_wrapper" class="box-body table-responsive no-padding">
        <%=  render 'index' %>
      </div><!-- /.box-body -->
    </div><!-- /.box -->
  </div>
  <div id = "new_course_modal_wrapper"> 
    <%= render 'course_form'  %>
  </div>
</div>
