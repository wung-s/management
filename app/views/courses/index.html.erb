<%= render partial: 'shared/page_info', locals: {page_title: "Course List", page_header: "Course List", page_header_description: "Courses"} %>

<div class="row">
    <div class="col-xs-12">
      <div class="box">
        <div class="box-header">
          <h3 class="box-title"></h3>
          <button type="button" class="btn btn-success" data-toggle="modal" data-target="#new_course_modal">Add Course</button>
          <div class="box-tools">
            <%= form_tag({controller: "courses", action: "search"}, method: 'get') do %>
            <div class="input-group" style="width: 150px;">
            	<%= number_field_tag :code, nil, { class: "form-control input-sm pull-right",placeholder: "code"}  %>
					<!-- <input type="text" name="table_search" class="form-control input-sm pull-right" placeholder="code"/> -->
                  <div class="input-group-btn">
                    <!-- <button class="btn btn-sm btn-default"><i class="fa fa-search"></i></button> -->
                    <%= submit_tag "Search", {class: "btn btn-sm btn-default"} %>
                  </div>
                  
            </div>
            <% end %>
          </div>
        </div><!-- /.box-header -->
        <div class="box-body table-responsive no-padding">
        	<% unless @courses.nil?  %>
				<table class="table table-hover">
	            <tr>
	              <th style="width: 10px">#</th>
	              <th>Code</th>
	              <th>Course Name</th>
	              <th>Department</th>
	              <th style="width: 40px">Action</th>
	            </tr>
					<%= render partial: "shared/course", collection: @courses %>
	      </table>
 			<% end  %>
	
        </div><!-- /.box-body -->
      </div><!-- /.box -->
    </div>
	
	<%= render 'shared/course_form'  %>

</div>
