<%= form_for @student, html: {class: "form-horizontal"} do |f| %>
<div class="box-body">
	<div class="form-group">
	    <label for="first_name" class="col-sm-2 control-label required">Name</label>
	    <div class="col-sm-10">
	  		<%= f.text_field :first_name, class: "form-control",placeholder: "first name", required: "true"  %>
	   		<%= f.text_field :middle_name, class: "form-control",placeholder: "middle name"  %>
	  		<%= f.text_field :last_name, class: "form-control",placeholder: "last name", required: "true"  %>
	    </div>
		    	
	</div>
	<div class="form-group">
	   	<label for="email" class="col-sm-2 control-label required">Email</label>
	   	<div class="col-sm-10">
	   		<%= f.text_field :email, class: "form-control",placeholder: "email", required: "true"  %>
		</div>
    </div>
    <div class="form-group">
	    <label class="col-sm-2 control-label required">Address</label>
	    <div class="col-sm-10" >
	   		<%= f.text_area :address, size: "3x3", class: "form-control", required: "true"  %>
	    </div>
	</div>
	<div class="form-group">
	    <label for = "student_country" class="col-sm-2 control-label required">Country</label>
	    <div class="col-sm-10" >
	        <%=  f.collection_select :country_id, Country.all, :id, :name, options = {prompt: "Select Country"}, {class: "form-control", required: "true"} %>
		
	    </div>    
	</div>
	<div id = "state_wrapper" class="form-group">
	    <label id = "student_state_label" for = "student_state" class="col-sm-2 control-label">State</label>
	    <div class="col-sm-10" >
	        <%=  f.collection_select :state_id, State.all, :id, :name, options = {prompt: "Select State"}, {class: "form-control", disabled: "true"} %>
		
	    </div>    
	</div>
	
	<div class="form-group">
       	<label for="inputEmail3" class="col-sm-2 control-label required">Pincode</label>
       	<div class="col-sm-10">
       		<%=  f.number_field :pincode, class: "form-control", required: "true"  %>
		</div>
	<!-- </div> -->
	</div>
	<div class="form-group">
       	<label for="inputEmail3" class="col-sm-2 control-label required">Emergency No</label>
       	<div class="col-sm-10">
       		<%=  f.number_field :emergency_no, class: "form-control", required: "true"  %>
		</div>
	<!-- </div> -->
	</div>

	<div class="form-group">
	    <label for = "student_department" class="col-sm-2 control-label required">Department</label>
	    <div class="col-sm-10" >
	        <%=  f.collection_select :department_id, Department.all, :id, :name, options = {prompt: "Select Department"}, {class: "form-control", required: "true"} %>
 		</div>
	</div>
    
</div><!-- /.box-body -->
<div class="box-footer">
    <button type="submit" class="btn btn-default pull-right col-sm-1" style="left-padding: 5px">Cancel</button>
    <%= f.submit "Register", class: "btn btn-success pull-right" %>
</div><!-- /.box-footer -->
<% end %>
   <!-- </form> -->
